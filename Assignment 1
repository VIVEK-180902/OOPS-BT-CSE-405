// Sum Of Two Numbers //



#include <iostream>

using namespace std;

class MAC

{
    int x,y;
 public:
      void getdata()
      {
          cout<<"enter the two numbers : "<<endl;
          cin>>x>>y;
      }
    int sum(int x,int y)
      {
          return (x+y);
      }
    void display()
      {
          cout<<"sum of the given numbers is : "<<x+y <<endl;
      }
};

int main()

{
    MAC v;
    int x,y;
    v.getdata();
    v.sum(x,y);
    v.display();
    return 0;
}

