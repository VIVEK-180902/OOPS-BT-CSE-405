#include <iostream>

using namespace std;

class sum
{
    private:
    int a,b;
    public:
        void setdata(int x,int y)
            {
                a=x;b=y;
            }
        void showdata()
    {
        cout<<"\na="<<a  <<"\nb="<<b;
    }

    sum operator +(sum c)

    {
        sum temp;
        temp.a=a+c.a;
        temp.b=b+c.b;
        return(temp);
    }
};

int main()
{
    sum c1,c2,c3;
    c1.setdata(2,4);
    c2.setdata(1,5);
    c3=c1+c2;
    c3.showdata();
}
